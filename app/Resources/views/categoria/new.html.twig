
{% block body %}
    {{ form_start(form) }}
        <div class="modal-content">
            <h3>Crear categoria</h3>
            <div class="row">
                    <div class="col l12 s12">
                        <div class="input-field">
                            {{ form_label(form.nombre) }}
                            {{ form_widget(form.nombre) }}
                            <div id="errorNombre">
                                {{ form_errors(form.nombre) }}
                            </div>
                        </div>     
                    </div>

                    <div class="col l12 s12">
                        <div class="input-field">
                            {{ form_label(form.descripcion) }}
                            {{ form_widget(form.descripcion) }}
                            <div id="errorDescripcion">
                                {{ form_errors(form.descripcion) }}
                            </div>
                        </div>     
                    </div>
                </div>    
        </div> 

        <div class="modal-footer">
            <a class="btn modal-close waves-effect waves-light btn cyan darken-4" href="javascript:guardar('#formCrearCategoria','{{ path('categoria_new') }}','1','{{ path('categoria_lista') }}')">Crear<i class="material-icons left">person_add</i></a>
            <a class="btn modal-close waves-effect waves-light btn cyan darken-4">Cancelar<i class="material-icons left">close</i></a>
        </div> 
    {{ form_end(form) }}
        
{% endblock %}    

    

    